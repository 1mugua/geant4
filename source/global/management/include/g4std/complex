#ifndef G4_COMPLEX_H
#define G4_COMPLEX_H

#ifndef G4USE_STD_NAMESPACE
  #if defined(__hpux) || defined(__linux)
    #include <complex>
    typedef complex<double> G4complex;
  #else
    #include <complex.h>
    typedef complex G4complex;
  #endif
#else
  #include <complex>
  typedef std::complex<double> G4complex;
#endif

#endif /* G4_COMPLEX_H */
